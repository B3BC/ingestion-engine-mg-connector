<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <ingestionengine_connector>
            <ingestionengine_api>
                <base_url>https://ie.silksoftware.com/api/v1/</base_url>
                <username>admin</username>
                <client_id>1_demo_client_id</client_id>
                <client_secret>demo_secret</client_secret>
                <pagination_size>500</pagination_size>
            </ingestionengine_api>
            <products_filters>
                <mode>standard</mode>
                <completeness_type>=</completeness_type>
                <completeness_value>100</completeness_value>
                <status>1</status>
                <updated_mode>SINCE LAST N DAYS</updated_mode>
            </products_filters>
            <product>
                <url_generation_enabled>1</url_generation_enabled>
                <product_model_batch_size>500</product_model_batch_size>
                <product_model_update_length>5000</product_model_update_length>
                <activation>2</activation>
            </product>
            <category>
                <is_active>1</is_active>
                <include_in_menu>1</include_in_menu>
                <is_anchor>1</is_anchor>
            </category>
        </ingestionengine_connector>
    </default>
</config>
